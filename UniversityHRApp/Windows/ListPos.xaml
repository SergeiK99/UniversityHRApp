        <Button x:Name="btDel" Content="Удалить" HorizontalAlignment="Left" Margin="0,417,0,0" VerticalAlignment="Top" Width="224" Height="44" FontSize="16" Click="btDel_Click"/>
        <Button x:Name="btClose" Content="Выйти" HorizontalAlignment="Left" Margin="0,461,0,0" VerticalAlignment="Top" Width="224" Height="44" FontSize="16" Click="btClose_Click"/>

    </Grid>
</Window>
